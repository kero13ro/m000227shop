
extends ./include/layout.pug

block content
  
  
  #cart

    .container
      .breadcrumb
        ul.nostyle
          li 首頁
          li.icon-right-thin 購物車

      .progress.mb72
        a
          img(src="./styles/images/cart-01b.png", alt="紫金堂")
          span 確認購物清單
        .icon-double-right
        a
          img(src="./styles/images/cart-02.png", alt="紫金堂")
          span 填寫訂購資料
        .icon-single-right
        a
          img(src="./styles/images/cart-03.png", alt="紫金堂")
          span 選擇付款方式
        .icon-single-right
        a
          img(src="./styles/images/cart-04.png", alt="紫金堂")
          span 訂單、資料確認
        .icon-single-right
        a
          img(src="./styles/images/cart-05.png", alt="紫金堂")
          span 購物完成


      .infoCard.mb32.right
        .infoCard__title 
          span.f24 訂單總計
          
        .infoCard__content.infoCard--multiple

          .multiple__sum.lh22
            ul.sum__order.nostyle
              li.bold 訂單總計
              li 常溫商品 (&nbsp; #[.brown 1] &nbsp;項 ) 
                span NT$ 11,888
              li 低溫商品 (&nbsp; #[.brown 3] &nbsp;項 ) 
                span NT$ 62,976
              li 滿額贈品 (&nbsp; #[.brown 1] &nbsp;項 ) 
                span.red 贈品
              li 紅利折抵 (&nbsp; #[.brown -150] &nbsp;點 ) 
                span.red NT$ -150
              li 活動折扣 (&nbsp; #[.brown 0] &nbsp;項 ) 
                span NT$ 0
              li 常溫運費 
                span NT$ 0
              li 低溫運費             
                span NT$ 0
              li.bold 訂單總計金額
                span.f20 NT $ 74,714
                

      .infoCard.mb32
        .infoCard__title 
          span.f24 請選擇運送範圍
          
        .infoCard__content.infoCard--radio
          .radio_unit
            input(type="radio", name="cart1" id="cart1-1") 
            label(for="cart1-1") 本島
          .radio_unit
            input(type="radio", name="cart1" id="cart1-2") 
            label(for="cart1-2") 離島



      .infoCard.mb32
        .infoCard__title 
          span.f24 購物清單
          span.ml24 共 #[span.red 4] 項商品
          
        .infoCard__content.infoCard--multiple

          .baseline.mb16
            .icon-thermometer.normal 常溫配送
            span 本區運費 NT$80 元，商品金額 NT$599（含）以上免運費

          .multiple__secondary.mb32
            .table__title
              div.pic 圖片
              div.name 商品貨號 / 商品名稱
              div.num 數量
              div.per 單價
              div.sum 小計
              div.del 刪除
            .table__content
              div.pic
                img(src="./styles/images//02-01-01.jpg" alt="紫金堂")
              div.name 月子補養兩日餐(10日)
              div(data-title="數量").num
                label.select_unit
                  select(required)
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
              div.per NT$11,888
              div.sum NT$11,888
              div.del: .icon-trash

            .table__total.wide5
              div.mr8 共 1 項，購物金額 11,888 + 常溫運費 0 =
              div NT $ 11,888


          .baseline.mb16
            .icon-thermometer.low 低溫配送
            span 本區運費 NT$150 元，商品金額 NT$1,500（含）以上免運費

          
          .multiple__secondary.mb16
            .table__title
              div.pic 圖片
              div.name 商品貨號 / 商品名稱
              div.num 數量
              div.per 單價
              div.sum 小計
              div.del 刪除
            .table__content
              div.pic 
                img(src="./styles/images/01-item02.jpg" alt="紫金堂")
              div.name 紫金堂月子餐【15日份】
              div(data-title="數量").num
                label.select_unit
                  select(required)
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
              div.per NT$28,200
              div.sum NT$28,200
              div.del: .icon-trash
            .table__append 《好孕加值禮》：  + (A) 疏乳棒1支、美身帶1條
            .table__content
              div.pic 
                img(src="./styles/images/02-01-01.jpg" alt="紫金堂")
              div.name 月子補養兩日餐(10日)
                .sub 產後第二週 + 哺乳
              div(data-title="數量").num
                label.select_unit
                  select(required)
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
              div.per NT$11,888
              div.sum NT$11,888
              div.del: .icon-trash
            .table__content
              div.pic 
                img(src="./styles/images/01-item01.jpg" alt="紫金堂")
              div.name 月子補養兩日餐(10日)
                .sub 產後第一週 + 哺乳 (出一停一)
              div(data-title="數量").num
                label.select_unit
                  select(required)
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
              div.per NT$22,888
              div.sum NT$22,888
              div.del: .icon-trash
            .table__total.wide5
              div.mr8 共 1 項，購物金額 62,976 + 常溫運費 0 =
              div NT $ 62,976

      .infoCard.mb32
        .infoCard__title 
          span.f24 紅利折抵
          
        .infoCard__content.lh20 您目前共享有紅利點數 #[span.red 1,130 ]
          | 點，每1點可折抵 #[span.red NT $ 1 ]
          | 元，本次購物使用
          input(type="text" required placeholder="150")
          | 點 ( #[span.red NT$150元]
          | ) #[br]
          span.gray 每次交易最高可折抵該筆訂單之消費金額150元


      .infoCard.mb32
        .infoCard__title 
          span.f24 滿額贈品
          
        .infoCard__content 
          .mb16 本筆訂單金額 #[span.red NT$5,000] 元以上，可挑選 #[span.red 1] 項贈品

          .gift__wrap.mb32
            .gift
              a.gift__pic.tank( href="#modal-gift" data-lity)
                .fluid(style="background-image: url(styles/images/01-gift-1.jpg)")

              .gift__title 疏乳棒 (舒舒棒)
              .gift__bottom
                .gift__num: span 倒數 45
                label.check_unit
                  input(type="checkbox")
                  .box
                  span 選取
            .gift.js-soldOut
              a.gift__pic.tank( href="#modal-gift" data-lity)
                .fluid(style="background-image: url(styles/images/01-gift-2.jpg)")
              .gift__title 美身帶
              .gift__bottom
                .gift__num: span 倒數 13
                .gift__check
                  label.check_unit
                    input(type="checkbox")
                    .box
                    span 選取

            .gift
              a.gift__pic.tank( href="#modal-gift" data-lity)
                .fluid(style="background-image: url(styles/images/01-gift-3.jpg)")
              .gift__title 艾力克斯的禮物-清涼膏隨身瓶 (30ml)
              .gift__bottom
                .gift__num: span 倒數 13
                .gift__check
                  label.check_unit
                    input(type="checkbox")
                    .box
                    span 選取

            .gift
              a.gift__pic.tank( href="#modal-gift" data-lity)
                .fluid(style="background-image: url(styles/images/01-gift-4.jpg)")
              .gift__title 乳尖修護膏
              .gift__bottom
                .gift__num: span 倒數 36
                .gift__check
                  label.check_unit
                    input(type="checkbox")
                    .box
                    span 選取
          .gray 每次交易最高可折抵該筆訂單之消費金額150元


      .infoCard.mb32
        .infoCard__title 
          span.f24 備註說明
          
        .infoCard__content.lh20 ※ 提醒您，進行結帳前
          span.red 請先確認購買的商品及金額
      
      .submit.pb80
        a(href="info.html").btn 繼續似購物
        .btn.cancel 下一步

  
