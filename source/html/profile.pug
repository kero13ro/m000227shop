              .radio_unit.transX
                input(type="radio" name="gender" id="male") 
                label(for="male") 先生
              .radio_unit
                input(type="radio" name="gender" id="female") 
                label(for="female") 小姐

            label.line.mb16 
              span.star 出生日期
              //- span.brown 1980-08-10
              input(type="date" required value="1980-08-10")

            label.line.mb16 
              span.star 連絡電話
              input(type="tel" placeholder="0988-818-818" required)


            label.line.mb16
              span.star 電子信箱
              input(type="mail" placeholder="test@gmail.com" required)

            label.line.addr.mb16
              span.star 聯絡地址
              .select_unit
                select(required)
                  //- option(disabled selected hidden) 縣市
                  option(value="台中市" selected) 台中市
                  option(value="台北市") 台北市

              .select_unit.break
                select(required)
                  //- option(disabled selected hidden) 鄉鎮區
                  option(value="北屯區" selected) 北屯區
                  option(value="松山區") 松山區
              
              input(type="text" required placeholder="406")
              //- input(type="text" required placeholder="郵遞區號")
              
            label.line.mb20
              span
              input(type="text" required placeholder="東山路一段147巷49號")

