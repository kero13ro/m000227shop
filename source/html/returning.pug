                td(data-title="退款金額"): div.fc NT $ 34,776
                td(data-title="退款方式"): div.fc 銀行匯款
                td(data-title="退款狀態"): div.fc 待處理
                td(data-title="商品狀態"): div.fc 
                  .red 退貨處理中
                td(data-title="收貨狀態"): div.fc -

          .baseline.mb16
            .icon-thermometer.normal 常溫配送
            span 退貨 #[span.brown 1] 項商品

          .multiple__secondary.mb32
            .table__title
              div.pic 圖片
              div.name 商品貨號 / 商品名稱
              div.num 數量
              div.per 單價
              div.sum 小計

            .table__content

              div.pic
                img(src="./styles/images//02-01-01.jpg" alt="紫金堂")
              div.name 
                a(href="intro.html") 月子補養兩日餐(10日)
              div(data-title="數量").num 1
              div.per NT$11,888
              div.sum NT$11,888

            .table__total.wide5
              div 共 1 項，退貨總計金額 =
              div NT $ -11,888


          .baseline.mb16
            .icon-thermometer.low 低溫配送
            span 退貨 #[span.brown 1] 項商品

          .multiple__secondary.mb16
            .table__title
              div.pic 圖片
